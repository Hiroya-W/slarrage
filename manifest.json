{
  "name": "Slarrage",
  "version": "1.0.0",
  "icons": {
    "128": "icon.png"
  },
  "manifest_version": 2,
  "permissions": ["tabs"],
  "background": {
    "scripts": ["background/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/presentation.js"],
      "css": ["content/presentation.css"]
    },
    {
      "matches": ["https://app.slack.com/*"],
      "js": ["content/observer.js", "content/watchingAlert.js"]
    }
  ],
  "browser_action": {
    "default_title": "Slarrage",
    "default_popup": "action/popup.html"
  }
}
